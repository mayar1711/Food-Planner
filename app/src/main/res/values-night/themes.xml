<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodPlanner" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/active</item>
        <item name="colorPrimaryVariant">@color/active</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/active</item>
        <item name="colorSecondaryVariant">@color/active</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="TextInputLayout" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="hintTextColor">@color/white_500</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/black_400</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/black_200</item>
    </style>

    <style name="editTextStyle">


        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="background">@color/black_400</item>
        <item name="android:textColor">@color/white_500</item>
    </style>
    <!-- Circle image view -->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="cardImageStyle">
        <item name="cornerSize">8dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="cardHeader">

        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="cardHeader.seeAllText">
        <item name="fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_400</item>

    </style>

    <style name="cardBackground" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/black_400</item>
    </style>

    <style name="navBackground" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/black_400</item>
    </style>

    <style name="tabItem">
        <item name="android:layout_marginHorizontal">@dimen/spacing_medium</item>
        <item name="android:paddingHorizontal">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabIndicatorColor">@color/active</item>
        <item name="tabTextColor">@color/active</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabMode">scrollable</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="tabPaddingStart">@dimen/spacing_medium</item>
        <item name="tabPaddingEnd">@dimen/spacing_medium</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="textStyle.Name">
        <item name="android:textColor">@color/black</item>
        <item name="android:text">text_name</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyle.Email">
        <item name="android:textColor">@color/black_400</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:text">email</item>
    </style>

    <style name="textStyleEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/black_400</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/black_400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textStyleEdit.Theme">
        <item name="android:text">theme</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="iconStyle">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>
    <style name="dividerStyle">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="dividerColor">@color/white_500</item>
    </style>
    <style name="TextView">
        <item name="android:textColor">@color/white_400</item>
    </style>


</resources>